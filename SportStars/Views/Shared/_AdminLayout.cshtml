@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" type="image/svg" href="~/imagenscarousel/logo_SportStars.jpg">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jquery")
    @*Tive de adicionar o bundle jquery porque se não o dropdown do navtab em mobile não funciona*@

</head>
<body>

    <header style="margin:10px">
        <nav class="navbar navbar-inverse" style="box-shadow:3px 4px 8px 0 rgba(0,0,0,.4); border-radius: 10px">
            <div class="container-fluid">
                <div class="row">


                    <div class="col-md-12">
                        <div class="navbar-header">
                            <a href="@Url.Action("Index","Home")" class="navbar-brand">
                                <!-- LOGO -->
                                <img class="img-circle" alt="Brand" src="~/imagenscarousel/logo_SportStars.jpg" style="border:solid 1px;width: 110px;height: 70px;box-shadow: 1px 2px 10px 0 rgba(0,0,0,.4)" />
                            </a>

                            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>


                        </div>
                        <div class="collapse navbar-collapse text-center" id="bs-example-navbar-collapse-1">

                            <ul class="nav navbar-nav navbar-left" style="padding:10px">
                                <li>
                                    @Html.ActionLink("Products", "Produtos", "Home", routeValues: null, htmlAttributes: new { @class = "nav-link" })

                                </li>
                                <li>
                                    @Html.ActionLink("Customer", "Customer", "Home", routeValues: null, htmlAttributes: new { @class = "nav-link" })
                                </li>

                                <li>
                                    @Html.ActionLink("Orders", "Orders", "Home", routeValues: null, htmlAttributes: new { @class = "nav-link" })
                                </li>



                            </ul>
                            <ul class="navbar-right" style="margin:auto">
                                @Html.Partial("_LoginPartial")
                            </ul>




                        </div>
                    </div>

                </div>
            </div>






        </nav>
    </header>


    <div style="margin: 50px">
        <div style="box-shadow: 0 4px 8px 0 rgba(0,0,0,.4); border-radius: 10px">
            @RenderBody()
        </div>
    </div>


    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/bundles/valida")*@

    @RenderSection("scripts", required: false)
    @RenderSection("imagem", required: false)
    @RenderSection("productdelete", required: false)
    @RenderSection("editafoto", required: false)
    @RenderSection("customerdelete", required: false)
    @RenderSection("editafotocustomer", required: false)
    @RenderSection("validaeditcustomer", required: false)
    @RenderSection("validaeditproduto", required: false)
    @RenderSection("valida", required: false)
    @RenderSection("validaboot", required: false)
    @RenderSection("dropdown_cascade", required: false)
    @RenderSection("checkbox", required: false)
    @RenderSection("productdetail", required: false)
    @RenderSection("customerdetail", required: false)
</body>
</html>